<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/spinner_bg_color" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item android:gravity="end">
                <shape>
                    <gradient android:angle="90" android:endColor="#cfcdcd" android:startColor="#cfcdcd" android:type="linear" />
                    <corners android:topLeftRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
                    <size android:height="@dimen/spinner_height" android:width="20dp" />
                </shape>
            </item>
            <item android:right="4dp">
                <bitmap android:layout_width="2dp" android:layout_height="4dp" android:gravity="end" android:src="@drawable/ic_spinner_arrow" />
            </item>
        </layer-list>
    </item>

</selector>