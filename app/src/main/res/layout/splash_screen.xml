<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splash_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/splash_logo"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="@color/orange"
            CircleProgressView:cpv_barWidth="4dp"
            CircleProgressView:cpv_blockCount="8"
            CircleProgressView:cpv_blockScale="0.8"
            CircleProgressView:cpv_innerContourSize="0dp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_outerContourSize="0dp"
            CircleProgressView:cpv_rimColor="#A5A59F"
            CircleProgressView:cpv_rimWidth="4dp"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_showUnit="false"
            CircleProgressView:cpv_spinColor="#A5A59F"
            CircleProgressView:cpv_textColor="@android:color/black"
            CircleProgressView:cpv_textScale="0.5"
            CircleProgressView:cpv_unit="%"
            CircleProgressView:cpv_unitColor="@android:color/black"
            CircleProgressView:cpv_unitPosition="right_top"
            CircleProgressView:cpv_unitScale="1"
            CircleProgressView:cpv_value="70" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>


